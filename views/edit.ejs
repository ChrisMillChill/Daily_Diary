<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Entry | Daily Diary</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" href="css/style.css">
</head>

<body>
  <header>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img src="/images/logo-drk-g.svg" alt="Daily Diary logo" width="112" height="35">
        </a>
      </div>

      <div class="navbar-menu">
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <a href="/logout" class="button is-warning">
                <strong>Logout</strong>
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <section class="section has-background-warning-light">
    <div class="container box">
      <h2 class="title is-2 center mb-6">Edit Entry</h2>
      <% todos.forEach( el=> { %>
        <% if (el._id==todoId) { %>
          <form action="/edit/<%= el._id %>" method="POST">
            <div class="columns">
              <div class="column">
                <input class="field input" type="text" value="<%= el.subject %>" name="subject">
              </div>
              <div class="column">
                <input class="field input" type="date" value="<%= el.entryDate %>" name="entryDate">
              </div>
            </div>
            <textarea class="textarea" type="text" name='todo'><%= el.todo %></textarea>

            <div class="columns">
              <div class="column">
                <button type="submit" class="confirm button is-success is-outlined is-fullwidth mt-5">Confirm</button>
              </div>
              <div class="column">
                <a href="/todos" class="button is-danger is-outlined is-fullwidth mt-5">Cancel</a>
              </div>
            </div>
          </form>
          <% } %>
            <% }) %>
    </div>
  </section>

